<Window x:Class="cOFolderPicker.View.FolderPickerWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:viewModel="clr-namespace:cOFolderPicker.ViewModel"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		mc:Ignorable="d"
		x:Name="MainWindow"
		WindowStyle="ToolWindow"
		ShowInTaskbar="False"
		Topmost="True"
		SizeToContent="WidthAndHeight"
		ResizeMode="NoResize"
		BorderBrush="#FF9900"
		MaxWidth="605"
		MaxHeight="464"
		ScrollViewer.VerticalScrollBarVisibility="Hidden"
		x:ClassModifier="internal">

	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
		<Style TargetType="Button">
			<Setter Property="VerticalAlignment"
					Value="Center" />
			<Setter Property="Margin"
					Value="0,0,5,0" />
			<Setter Property="FontWeight"
					Value="Normal" />
		</Style>
		<ControlTemplate x:Key="GlassButton"
						 TargetType="{x:Type Button}">
			<ControlTemplate.Resources>
				<Storyboard x:Key="Timeline1">
					<DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
												   Storyboard.TargetName="glow"
												   Storyboard.TargetProperty="(UIElement.Opacity)">
						<SplineDoubleKeyFrame KeyTime="00:00:00.3000000"
											  Value="1" />
					</DoubleAnimationUsingKeyFrames>
				</Storyboard>
				<Storyboard x:Key="Timeline2">
					<DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
												   Storyboard.TargetName="glow"
												   Storyboard.TargetProperty="(UIElement.Opacity)">
						<SplineDoubleKeyFrame KeyTime="00:00:00.3000000"
											  Value="0" />
					</DoubleAnimationUsingKeyFrames>
				</Storyboard>
			</ControlTemplate.Resources>
			<Border BorderBrush="#FFFFFFFF"
					BorderThickness="1,1,1,1"
					CornerRadius="4,4,4,4">
				<Border x:Name="border"
						Background="Transparent"
						BorderBrush="#FF9900"
						BorderThickness="1,1,1,1"
						CornerRadius="4,4,4,4">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="0.507*" />
							<RowDefinition Height="0.493*" />
						</Grid.RowDefinitions>
						<Border Opacity="0"
								HorizontalAlignment="Stretch"
								x:Name="glow"
								Width="Auto"
								Grid.RowSpan="2"
								CornerRadius="4,4,4,4">
							<Border.Background>
								<RadialGradientBrush>
									<RadialGradientBrush.RelativeTransform>
										<TransformGroup>
											<ScaleTransform ScaleX="1.702"
															ScaleY="2.243" />
											<SkewTransform AngleX="0"
														   AngleY="0" />
											<RotateTransform Angle="0" />
											<TranslateTransform X="-0.368"
																Y="-0.152" />
										</TransformGroup>
									</RadialGradientBrush.RelativeTransform>
									<GradientStop Color="#FF9900"
												  Offset="0" />
									<GradientStop Color="#BFF8A714"
												  Offset="1" />
								</RadialGradientBrush>
							</Border.Background>
						</Border>
						<ContentPresenter HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										  Width="Auto"
										  Grid.RowSpan="2" />
						<Border HorizontalAlignment="Stretch"
								Margin="0,0,0,0"
								x:Name="shine"
								Width="Auto"
								CornerRadius="4,4,0,0">
							<Border.Background>
								<LinearGradientBrush EndPoint="0.494,0.889"
													 StartPoint="0.494,0.028">
									<GradientStop Color="#99FFFFFF"
												  Offset="0" />
									<GradientStop Color="#33FFFFFF"
												  Offset="1" />
								</LinearGradientBrush>
							</Border.Background>
						</Border>
					</Grid>
				</Border>
			</Border>
			<ControlTemplate.Triggers>
				<Trigger Property="IsPressed"
						 Value="True">
					<Setter Property="Opacity"
							TargetName="shine"
							Value="0.4" />
					<Setter Property="Background"
							TargetName="border"
							Value="#FF9900" />
					<Setter Property="Visibility"
							TargetName="glow"
							Value="Hidden" />
				</Trigger>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Trigger.EnterActions>
						<BeginStoryboard Storyboard="{StaticResource Timeline1}" />
					</Trigger.EnterActions>
					<Trigger.ExitActions>
						<BeginStoryboard x:Name="Timeline2_BeginStoryboard"
										 Storyboard="{StaticResource Timeline2}" />
					</Trigger.ExitActions>
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
	</Window.Resources>
	<Window.InputBindings>
		<KeyBinding Key="Enter"
					Command="{Binding CloseWindowCommand, ElementName=MainWindow}" />
	</Window.InputBindings>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0"
				  Visibility="{Binding IsChecked, ElementName=toggleButton, Converter={StaticResource BooleanToVisibilityConverter}}">
				<Grid.RowDefinitions>
					<RowDefinition Height="335" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<StackPanel Grid.Row="0"
							Height="Auto"
							DataContext="{Binding ElementName=MyTreeView, Path=SelectedItem}">
					<ListView x:Name="MyListView"
							  Margin="6,6,6,6"
							  Height="324"
							  BorderBrush="#656565"
							  Background="Transparent"
							  ItemsSource="{Binding FavoriteList, UpdateSourceTrigger=PropertyChanged}"
							  SelectedItem="{Binding SelectedFavoriteItem}">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="Favorites"
												Width="155" />
							</GridView>
						</ListView.View>
						<ListView.InputBindings>
							<KeyBinding Key="Delete"
										Command="{Binding RemoveSelectedFavoriteCommand}"></KeyBinding>
						</ListView.InputBindings>
						<ListView.ItemContainerStyle>
							<Style TargetType="ListBoxItem">
								<Setter Property="ToolTip"
										Value="Press 'Delete' key to remove from Favorites" />
							</Style>
						</ListView.ItemContainerStyle>
					</ListView>
				</StackPanel>
				<StackPanel Grid.Row="1"
							Margin="6,0,6,0">
					<Button  x:Name="ButtonGoToFolder"
							 Content="Go to folder"
							 Template="{DynamicResource GlassButton}"
							 Grid.Column="0"
							 VerticalAlignment="Center"
							 Command="{Binding GoToFolderCommand}" />
				</StackPanel>
			</Grid>
			<Grid Grid.Column="1"
				  MinWidth="400"
				  MaxWidth="400">
				<Grid.RowDefinitions>
					<RowDefinition Height="335" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<TreeView x:Name="MyTreeView"
						  Margin="6,6,6,6"
						  ItemsSource="{Binding RootFolder}"
						  BorderBrush="#656565"
						  Background="Transparent"
						  Grid.Row="0">
					<TreeView.Resources>
						<LinearGradientBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
											 EndPoint="0,1"
											 StartPoint="0,0">
							<GradientStop Color="Transparent"
										  Offset="0" />
							<GradientStop Color="Transparent"
										  Offset="1" />
						</LinearGradientBrush>
						<LinearGradientBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
											 EndPoint="0,1"
											 StartPoint="0,0">
							<GradientStop Color="#FFEEEDED"
										  Offset="0" />
							<GradientStop Color="#FFDDDDDD"
										  Offset="1" />
						</LinearGradientBrush>
						<SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
										 Color="Black" />
						<SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
										 Color="Black" />
					</TreeView.Resources>

					<TreeView.ItemContainerStyle>
						<Style TargetType="{x:Type TreeViewItem}">
							<Setter Property="BorderThickness"
									Value="1" />
							<Setter Property="IsExpanded"
									Value="{Binding IsExpanded, Mode=TwoWay}" />
							<Setter Property="IsSelected"
									Value="{Binding IsSelected, Mode=TwoWay}" />
							<Setter Property="viewModel:TreeViewItemBehavior.IsBroughtIntoViewWhenSelected"
									Value="True" />
							<Style.Triggers>
								<Trigger Property="IsSelected"
										 Value="True">
									<Setter Property="BorderBrush"
											Value="#FF9900" />
								</Trigger>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="IsSelected"
												   Value="True" />
										<Condition Property="IsSelectionActive"
												   Value="False" />
									</MultiTrigger.Conditions>
									<Setter Property="BorderBrush"
											Value="LightGray" />
								</MultiTrigger>
							</Style.Triggers>
							<Style.Resources>
								<Style TargetType="Border">
									<Setter Property="CornerRadius"
											Value="2" />
								</Style>
							</Style.Resources>
						</Style>
					</TreeView.ItemContainerStyle>

					<TreeView.ItemTemplate>
						<HierarchicalDataTemplate DataType="{x:Type viewModel:FolderTreeViewModel}"
												  ItemsSource="{Binding Children}">
							<StackPanel x:Name="TreeViewItemPanel"
										Orientation="Horizontal">
								<Image Width="16"
									   Height="16"
									   Margin="3,0"
									   Source="{Binding Icon}" />
								<TextBlock Text="{Binding Name}"
										   Background="Transparent" />
								<Grid x:Name="LayoutRoot"
									  Height="13"
									  Width="75"
									  Background="Transparent"
									  Margin="5,0">
									<ProgressBar Name="pbLoading"
												 Height="13"
												 Width="50"
												 IsIndeterminate="True"
												 HorizontalAlignment="Left"
												 VerticalAlignment="Center"
												 Visibility="{Binding ProgressbarVisibility}" />
									<TextBlock Name="txtLoading"
											   Text="Loading..."
											   FontSize="8.6"
											   Margin="5,0"
											   HorizontalAlignment="Left"
											   VerticalAlignment="Center"
											   Visibility="{Binding ProgressbarVisibility}" />
									<CheckBox Focusable="False"
											  VerticalAlignment="Center"
											  HorizontalAlignment="Right">
										<CheckBox.Style>
											<Style TargetType="{x:Type CheckBox}">
												<Setter Property="IsChecked"
														Value="{Binding IsChecked, Mode=TwoWay}" />

												<Setter Property="Template">
													<Setter.Value>
														<ControlTemplate TargetType="{x:Type CheckBox}">
															<Image MaxWidth="16"
																   MaxHeight="16">
																<Image.Style>
																	<Style TargetType="{x:Type Image}">
																		<Style.Triggers>
																			<MultiDataTrigger>
																				<MultiDataTrigger.Conditions>
																					<Condition Binding="{Binding ElementName=TreeViewItemPanel, Path=IsMouseOver}"
																							   Value="True" />
																					<Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
																							   Value="False" />
																				</MultiDataTrigger.Conditions>
																				<Setter Property="Source"
																						Value="{Binding StarEmptyIcon}" />
																				<Setter Property="ToolTip"
																						Value="Zu Favoritenliste hinzufügen" />
																			</MultiDataTrigger>
																			<DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
																						 Value="True">
																				<Setter Property="Source"
																						Value="{Binding StarIcon}" />
																				<Setter Property="ToolTip"
																						Value="Aus Favoritenliste entfernen" />
																			</DataTrigger>
																		</Style.Triggers>
																	</Style>
																</Image.Style>
															</Image>
														</ControlTemplate>
													</Setter.Value>
												</Setter>
											</Style>
										</CheckBox.Style>
									</CheckBox>
								</Grid>
							</StackPanel>
						</HierarchicalDataTemplate>
					</TreeView.ItemTemplate>
				</TreeView>
				<StackPanel Grid.Row="1"
							DataContext="{Binding ElementName=MyTreeView, Path=SelectedItem}"
							Grid.Column="1">
					<ComboBox Height="Auto"
							  Width="Auto"
							  Background="Transparent"
							  BorderBrush="#656565"
							  IsEditable="True"
							  IsReadOnly="True"
							  Margin="6,0,6,6"
							  VerticalAlignment="Top"
							  Text="{Binding SelectedHistoryItem, UpdateSourceTrigger=LostFocus}"
							  ItemsSource="{Binding HistoryList, Mode=OneWay}"
							  SelectedValue="{Binding SelectedHistoryItem, Mode=TwoWay}" />
				</StackPanel>
			</Grid>
		</Grid>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="200" />
				<ColumnDefinition Width="100" />
				<ColumnDefinition Width="100" />
			</Grid.ColumnDefinitions>
			<ToggleButton Grid.Column="1"
						  x:Name="toggleButton"
						  Width="98"
						  Margin="-5,0,0,5"
						  HorizontalAlignment="Left">
				<ToggleButton.Style>
					<Style TargetType="{x:Type ToggleButton}">
						<Setter Property="Content">
							<Setter.Value>
								<StackPanel Orientation="Horizontal">
									<Image Source="{Binding StarEmptyIcon}" />
									<TextBlock Text=" Favorites"
											   VerticalAlignment="Center" />
								</StackPanel>
							</Setter.Value>
						</Setter>
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type ToggleButton}">
									<Border>
										<ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
														  RecognizesAccessKey="True"
														  HorizontalAlignment="Center" />
									</Border>
									<ControlTemplate.Triggers>
										<Trigger  Property="IsChecked"
												  Value="True">
											<Setter Property="Content">
												<Setter.Value>
													<StackPanel Orientation="Horizontal">
														<Image Source="{Binding StarIcon}" />
														<TextBlock Text=" Favorites"
																   VerticalAlignment="Center" />
													</StackPanel>
												</Setter.Value>
											</Setter>
										</Trigger>
									</ControlTemplate.Triggers>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</ToggleButton.Style>
			</ToggleButton>
			<Button x:Name="ButtonOk"
					DataContext="{Binding ElementName=MyTreeView, Path=SelectedItem}"
					Grid.Column="2"
					Content="OK"
					Template="{DynamicResource GlassButton}"
					Margin="6,6,6,10"
					VerticalAlignment="Center"
					IsEnabled="{Binding IsSelected, Mode=OneWay}"
					IsDefault="True"
					Command="{Binding CloseWindowCommand, ElementName=MainWindow}"
					Height="20" />
			<Button   x:Name="ButtonCancel"
					  Content="Cancel"
					  Template="{DynamicResource GlassButton}"
					  Grid.Column="3"
					  Margin="6,6,6,10"
					  IsCancel="True"
					  Height="20" />
		</Grid>
